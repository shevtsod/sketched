{
  "name": "sketched",
  "private": true,
  "license": "UNLICENSED",
  "version": "0.0.0",
  "description": "A web game about drawing things from memory!",
  "homepage": "https://github.com/shevtsod/sketched#readme",
  "bugs": {
    "url": "https://github.com/shevtsod/sketched/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shevtsod/sketched.git"
  },
  "author": "Daniel Shevtsov",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:client": "npm -w client run build",
    "build:server": "npm -w server run build",
    "build": "conc -c auto 'npm:build:client' 'npm:build:server'",
    "dev:client": "npm -w client run dev",
    "dev:server": "npm -w server run start:debug",
    "dev": "conc -c auto 'npm:dev:client' 'npm:dev:server'",
    "start:client": "npm -w client run preview",
    "start:server": "npm -w server run start:prod",
    "start": "conc -c auto 'npm:start:client' 'npm:start:server'",
    "test:client": "npm -w client run test:cov",
    "test:server": "npm -w server run test:cov",
    "test:server:e2e": "npm -w server run test:e2e",
    "test": "conc -c auto 'npm:test:client' 'npm:test:server' 'npm:test:server:e2e'",
    "pw": "playwright",
    "pw:install": "playwright install --with-deps",
    "pw:test": "playwright test",
    "pw:ui": "playwright test --ui",
    "pw:gen": "playwright codegen",
    "pw:report": "playwright show-report",
    "cli": "npm -w server run cli:prod --",
    "cli:dev": "npm -w server run cli --"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testcontainers/minio": "^11.10.0",
    "@testcontainers/postgresql": "^11.10.0",
    "@testcontainers/valkey": "^11.10.0",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "execa": "^9.6.1",
    "testcontainers": "^11.10.0"
  }
}
