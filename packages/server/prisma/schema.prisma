generator client {
  provider     = "prisma-client"
  output       = "../src/common/db/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                    Int       @id @default(autoincrement())
  userId                Int
  providerId            String    @db.VarChar(256)
  accountId             String    @db.VarChar(256)
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique(fields: [userId, providerId])
}

model Session {
  id        Int       @id @default(autoincrement())
  userId    Int
  token     String    @unique
  expiresAt DateTime
  ipAddress String?   @db.VarChar(64)
  userAgent String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique @db.VarChar(256)
  email     String    @db.VarChar(256)
  image     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  accounts Account[]
  sessions Session[]
}
